@model InvoiceApp.ViewModels.RegisterFormViewModel

@{ 
    ViewData["Title"] = "Register";
}

<h1>Register Admin and provide company data.</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h2>Admin Details</h2>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <hr />
            <h2>Company Details</h2>
            <div class="form-group">
                <label asp-for="CompanyDetails.Name"></label>
                <input asp-for="CompanyDetails.Name" class="form-control" />
                <span asp-validation-for="CompanyDetails.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyDetails.Address"></label>
                <input asp-for="CompanyDetails.Address" class="form-control" />
                <span asp-validation-for="CompanyDetails.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyDetails.PostalCode"></label>
                <input asp-for="CompanyDetails.PostalCode" class="form-control" />
                <span asp-validation-for="CompanyDetails.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyDetails.City"></label>
                <input asp-for="CompanyDetails.City" class="form-control" />
                <span asp-validation-for="CompanyDetails.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyDetails.Country"></label>
                <input asp-for="CompanyDetails.Country" class="form-control" />
                <span asp-validation-for="CompanyDetails.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyDetails.VATNumber"></label>
                <input asp-for="CompanyDetails.VATNumber" class="form-control" />
                <span asp-validation-for="CompanyDetails.VATNumber" class="text-danger"></span>
            </div>
            <hr />
            <h4>Optional Company Details</h4>
            <div class="form-group">
                <label asp-for="CompanyDetails.Email"></label>
                <input asp-for="CompanyDetails.Email" class="form-control" />
                <span asp-validation-for="CompanyDetails.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyDetails.Phone"></label>
                <input asp-for="CompanyDetails.Phone" class="form-control" />
                <span asp-validation-for="CompanyDetails.Phone" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}